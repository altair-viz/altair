{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "http://vega.github.io/vega-lite/data/stocks.csv"
    },
    "description": "Stock price over time with color legend orient = left.",
    "layer": [
        {
            "encoding": {
                "color": {
                    "field": "symbol",
                    "type": "nominal"
                },
                "x": {
                    "field": "date",
                    "type": "temporal"
                },
                "y": {
                    "field": "price",
                    "type": "quantitative"
                }
            },
            "mark": "line"
        },
        {
            "encoding": {
                "color": {
                    "field": "symbol",
                    "legend": {
                        "orient": "left"
                    },
                    "type": "nominal"
                },
                "x": {
                    "field": "date",
                    "type": "temporal"
                },
                "y": {
                    "field": "price",
                    "type": "quantitative"
                }
            },
            "mark": {
                "filled": true,
                "type": "point"
            }
        }
    ]
}