{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "http://vega.github.io/vega-lite/data/cars.json"
    },
    "encoding": {
        "size": {
            "condition": {
                "selection": "paintbrush",
                "value": 300
            },
            "value": 50
        },
        "x": {
            "field": "Horsepower",
            "type": "quantitative"
        },
        "y": {
            "field": "Miles_per_Gallon",
            "type": "quantitative"
        }
    },
    "mark": "point",
    "selection": {
        "paintbrush": {
            "on": "mouseover",
            "type": "multi"
        }
    }
}