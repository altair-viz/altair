{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "config": {
        "scale": {
            "rangeStep": 21
        }
    },
    "data": {
        "url": "http://vega.github.io/vega-lite/data/population.json"
    },
    "encoding": {
        "x": {
            "aggregate": "sum",
            "axis": {
                "title": "population"
            },
            "field": "people",
            "type": "quantitative"
        }
    },
    "mark": "bar",
    "transform": [
        {
            "filter": "datum.year == 2000"
        }
    ]
}