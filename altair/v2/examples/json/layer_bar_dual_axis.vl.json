{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "http://vega.github.io/vega-lite/data/seattle-weather.csv"
    },
    "layer": [
        {
            "encoding": {
                "x": {
                    "field": "date",
                    "timeUnit": "month",
                    "type": "temporal"
                },
                "y": {
                    "aggregate": "mean",
                    "axis": {
                        "grid": false
                    },
                    "field": "precipitation",
                    "type": "quantitative"
                }
            },
            "mark": "bar"
        },
        {
            "encoding": {
                "color": {
                    "value": "firebrick"
                },
                "x": {
                    "field": "date",
                    "timeUnit": "month",
                    "type": "temporal"
                },
                "y": {
                    "aggregate": "mean",
                    "axis": {
                        "grid": false
                    },
                    "field": "temp_max",
                    "scale": {
                        "zero": false
                    },
                    "type": "quantitative"
                }
            },
            "mark": "line"
        }
    ],
    "resolve": {
        "y": {
            "scale": "independent"
        }
    }
}