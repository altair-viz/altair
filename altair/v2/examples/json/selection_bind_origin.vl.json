{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "http://vega.github.io/vega-lite/data/cars.json"
    },
    "encoding": {
        "color": {
            "condition": {
                "field": "Cylinders",
                "selection": "org",
                "type": "ordinal"
            },
            "value": "grey"
        },
        "x": {
            "field": "Horsepower",
            "type": "quantitative"
        },
        "y": {
            "field": "Miles_per_Gallon",
            "type": "quantitative"
        }
    },
    "mark": "point",
    "selection": {
        "org": {
            "bind": {
                "input": "select",
                "options": [
                    "Europe",
                    "Japan",
                    "USA"
                ]
            },
            "fields": [
                "Origin"
            ],
            "type": "single"
        }
    }
}