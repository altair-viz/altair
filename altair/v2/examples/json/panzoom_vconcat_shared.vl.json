{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "http://vega.github.io/vega-lite/data/cars.json"
    },
    "resolve": {
        "x": {
            "scale": "shared"
        }
    },
    "vconcat": [
        {
            "encoding": {
                "x": {
                    "field": "Horsepower",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Miles_per_Gallon",
                    "type": "quantitative"
                }
            },
            "mark": "point",
            "selection": {
                "region": {
                    "bind": "scales",
                    "type": "interval"
                }
            }
        },
        {
            "encoding": {
                "x": {
                    "field": "Horsepower",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Acceleration",
                    "type": "quantitative"
                }
            },
            "mark": "point"
        }
    ]
}