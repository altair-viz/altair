{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "http://vega.github.io/vega-lite/data/cars.json"
    },
    "description": "Drag the sliders to highlight points.",
    "layer": [
        {
            "encoding": {
                "color": {
                    "condition": {
                        "field": "Origin",
                        "selection": "CylYr",
                        "type": "nominal"
                    },
                    "value": "grey"
                },
                "x": {
                    "field": "Horsepower",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Miles_per_Gallon",
                    "type": "quantitative"
                }
            },
            "mark": "circle",
            "selection": {
                "CylYr": {
                    "bind": {
                        "Cylinders": {
                            "input": "range",
                            "max": 8,
                            "min": 3,
                            "step": 1
                        },
                        "Year": {
                            "input": "range",
                            "max": 1981,
                            "min": 1969,
                            "step": 1
                        }
                    },
                    "fields": [
                        "Cylinders",
                        "Year"
                    ],
                    "type": "single"
                }
            }
        },
        {
            "encoding": {
                "color": {
                    "field": "Origin",
                    "type": "nominal"
                },
                "size": {
                    "value": 100
                },
                "x": {
                    "field": "Horsepower",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Miles_per_Gallon",
                    "type": "quantitative"
                }
            },
            "mark": "circle",
            "transform": [
                {
                    "filter": {
                        "selection": "CylYr"
                    }
                }
            ]
        }
    ],
    "transform": [
        {
            "as": "Year",
            "calculate": "year(datum.Year)"
        }
    ]
}