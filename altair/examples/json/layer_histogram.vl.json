{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "http://vega.github.io/vega-lite/data/flights-2k.json"
    },
    "layer": [
        {
            "encoding": {
                "x": {
                    "bin": true,
                    "field": "distance",
                    "type": "quantitative"
                },
                "y": {
                    "aggregate": "count",
                    "type": "quantitative"
                }
            },
            "mark": "bar"
        },
        {
            "encoding": {
                "color": {
                    "value": "goldenrod"
                },
                "x": {
                    "bin": true,
                    "field": "distance",
                    "type": "quantitative"
                },
                "y": {
                    "aggregate": "count",
                    "type": "quantitative"
                }
            },
            "mark": "bar",
            "transform": [
                {
                    "filter": "datum.delay < 500"
                }
            ]
        }
    ]
}