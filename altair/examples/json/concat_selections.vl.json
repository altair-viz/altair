{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "http://vega.github.io/vega-lite/data/cars.json"
    },
    "vconcat": [
        {
            "encoding": {
                "x": {
                    "field": "Miles_per_Gallon",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Horsepower",
                    "type": "quantitative"
                }
            },
            "mark": "point",
            "selection": {
                "brush": {
                    "encodings": [
                        "x",
                        "y"
                    ],
                    "resolve": "global",
                    "type": "interval"
                }
            }
        },
        {
            "encoding": {
                "color": {
                    "condition": {
                        "selection": "brush",
                        "value": "steelblue"
                    },
                    "value": "red"
                },
                "x": {
                    "field": "Displacement",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Acceleration",
                    "type": "quantitative"
                }
            },
            "mark": "point",
            "selection": {
                "grid": {
                    "bind": "scales",
                    "type": "interval"
                }
            }
        }
    ]
}