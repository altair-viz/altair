{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "repeat": {
        "column": [
            "Horsepower",
            "Miles_per_Gallon",
            "Acceleration"
        ]
    },
    "spec": {
        "data": {
            "url": "http://vega.github.io/vega-lite/data/cars.json"
        },
        "encoding": {
            "color": {
                "field": "Origin",
                "type": "nominal"
            },
            "x": {
                "bin": true,
                "field": {
                    "repeat": "column"
                },
                "type": "quantitative"
            },
            "y": {
                "aggregate": "count",
                "type": "quantitative"
            }
        },
        "mark": "bar"
    }
}