{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "http://vega.github.io/vega-lite/data/cars.json"
    },
    "description": "Drag out a rectangular brush to highlight points.",
    "layer": [
        {
            "encoding": {
                "color": {
                    "condition": {
                        "selection": "brush",
                        "value": "grey"
                    },
                    "field": "Cylinders",
                    "type": "ordinal"
                },
                "size": {
                    "value": 100
                },
                "x": {
                    "field": "Horsepower",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Miles_per_Gallon",
                    "type": "quantitative"
                }
            },
            "mark": "point",
            "selection": {
                "cyl": {
                    "bind": {
                        "input": "range",
                        "max": 8,
                        "min": 3,
                        "step": 1
                    },
                    "fields": [
                        "Cylinders"
                    ],
                    "type": "single"
                },
                "grid": {
                    "bind": "scales",
                    "translate": "[mousedown[!event.shiftKey], mouseup] > mousemove",
                    "type": "interval"
                }
            }
        },
        {
            "encoding": {
                "color": {
                    "condition": {
                        "field": "Cylinders",
                        "selection": "brush",
                        "type": "ordinal"
                    },
                    "value": "grey"
                },
                "size": {
                    "condition": {
                        "selection": "cyl",
                        "value": 150
                    },
                    "value": 50
                },
                "x": {
                    "field": "Horsepower",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Miles_per_Gallon",
                    "type": "quantitative"
                }
            },
            "mark": "square",
            "selection": {
                "brush": {
                    "on": "[mousedown[event.shiftKey], mouseup] > mousemove",
                    "translate": "[mousedown[event.shiftKey], mouseup] > mousemove",
                    "type": "interval"
                }
            }
        }
    ]
}