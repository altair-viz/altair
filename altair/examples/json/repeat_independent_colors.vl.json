{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "repeat": {
        "column": [
            "Origin",
            "Cylinders"
        ]
    },
    "resolve": {
        "color": {
            "scale": "independent"
        }
    },
    "spec": {
        "data": {
            "url": "http://vega.github.io/vega-lite/data/cars.json"
        },
        "encoding": {
            "color": {
                "field": {
                    "repeat": "column"
                },
                "type": "nominal"
            },
            "x": {
                "field": "Horsepower",
                "type": "quantitative"
            },
            "y": {
                "field": "Miles_per_Gallon",
                "type": "quantitative"
            }
        },
        "mark": "point"
    }
}